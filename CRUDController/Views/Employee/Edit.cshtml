@model CRUDController.Models.Employee
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<a class="btn btn-sm btn-primary m-2" asp-controller="Employee" asp-action="Index">Back</a>

<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header">
                    <h1 class="text-center text-primary">Edit Employee</h1>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Edit">

                        <div class="form-group">
                            <label asp-for="Name"></label>
                            <input type="hidden" asp-for="Id"/>
                            <input type="text" asp-for="Name" class="form-control" placeholder="Enter Employee Name" />
                        </div>

                        <div class="form-group">
                            <label asp-for="City"></label>
                            <input type="text" asp-for="City" class="form-control" placeholder="Enter City Name" />
                        </div>

                        <div class="form-group">
                            <label asp-for="State"></label>
                            <input type="text" asp-for="State" class="form-control" placeholder="Enter State Name" />
                        </div>

                        <div class="form-group">
                            <label asp-for="Salary"></label>
                            <input type="text" asp-for="Salary" class="form-control" placeholder="Enter State Name" />
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Edit" class="btn-group-sm btn-primary my-2 float-end" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


